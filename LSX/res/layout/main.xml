<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    android:background="@drawable/maroon_noise_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Lizard Spock Expansion 2.0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/playImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:background="#800000"
            android:src="@drawable/lsx_play" />

        <Button
            android:id="@+id/buttonRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/playImageButton"
            android:layout_below="@+id/playImageButton"
            android:layout_marginTop="43dp"
            android:background="#CC0000"
            android:height="50dp"
            android:text="Rules"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:width="300px" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/all_weapons" />

        <Button
            android:id="@+id/buttonAchievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonRules"
            android:layout_below="@+id/buttonRules"
            android:layout_marginTop="5dp"
            android:background="#CC0000"
            android:height="50dp"
            android:text="Achievements"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:width="300px" />

        <Button
            android:id="@+id/rateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonAchievements"
            android:layout_below="@+id/buttonAchievements"
            android:background="#AA0000"
            android:height="50dp"
            android:text="Rate this app"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"
            android:width="300px" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rateButton"
            android:layout_below="@+id/rateButton"
            android:background="#AA0000"
            android:height="50dp"
            android:text="Developer&apos;s Website"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"
            android:width="300px" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button3"
            android:layout_below="@+id/button3"
            android:background="#AA0000"
            android:height="50dp"
            android:text="Like on Facebook"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"
            android:width="300px" />

    </RelativeLayout>
    

</LinearLayout>
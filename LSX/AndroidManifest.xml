<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.savthecoder.mobile.android.lsx"
    android:versionCode="9"
    android:versionName="2.0.3" >

    <uses-sdk android:minSdkVersion="7" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="android.app.Application" >
        <activity
            android:name=".LSXActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".NewGameActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".RulesActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".ChooseWeaponActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".OpponentPlayActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".GameEndActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".DevelopersWebsiteActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".RateAppActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".LikeOnFacebookActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".AchievementsActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name=".InterstitialAdActivity" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
 
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"/>
  	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>